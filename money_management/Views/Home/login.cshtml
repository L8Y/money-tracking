@{
        Layout = null;
    }


<html>
    <head>
        <title>Money Management App</title>
        <style>
            :root {
                --form-background: rgba(64, 75, 135, 0.1);
                --text: #515151;
                --form-secondary: #004D47;
             }

            .form-page {
                display: flex;
                flex-direction: column;
                margin-top: 5%;
            }

            .form-title {
    
                display: flex;
                justify-content: center;
                color: #E95C20FF;
                font-family: "Handlee", cursive;
            }

            .form {
                background-color: white;
                display: flex;
                justify-content: center;
    
            }

            .form-input {
                width: 22rem;
                height: 3rem;
                border-radius: 0.5rem;
                border: 1px solid #E95C20FF ;
                color: var(--text);
                font-size: large;
                padding-left: 1.2rem;
                margin-bottom: 2rem;
                font-family: "Handlee", cursive;
            }

            .form-button {
                background-color: #E95C20FF;
                color: #FFFFFF;
                width: 12rem;
                height: 3rem;
                border-radius: 0.5rem;
                border : none;
                cursor: pointer;
                font-size: large;
                font-family: "Handlee", cursive;
            }

            .form-button-layout {
                display: flex;
                flex-direction: column;
                align-items: center;
            }
        </style>
    </head>
    <body>        
        <form class="form" method="post">
            <div class="form-page">
                <h1 class="form-title" >Login</h1>
                <input class="form-input" required type="email" placeholder="Email" name="email" />
                <input class="form-input" required placeholder="Password" type="password" name="password" />
                <section class="form-button-layout">
                    <input class="form-button" type="submit" value="Login" />
                    <br />
                    <p>Don't have an account? <a href="Home/register">Sign Up</a></p>
                </section>
            </div> 
        </form>         
        @ViewData["Message"]
   </body>
</html>